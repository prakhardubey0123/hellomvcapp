pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'helloworldmvc'
        SONARQUBE_URL = 'http://localhost:9000'
        SONAR_PROJECT_KEY = 'hello-world-mvc' // Define the project key here
        SONAR_LOGIN='jenkins-sonar'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                script {
                    dir('HelloWorldMvc') {
                        sh 'dotnet build'
                    }
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    dir('HelloWorldMvc.Tests') {
                        sh 'dotnet test'
                    }
                }
            }
        }

        stage('Docker Build') {
            steps {
                script {
                    sh 'docker build -t $DOCKER_IMAGE .'
                }
            }
        }

        stage('Docker Run') {
            steps {
                script {
                    sh 'docker run -d -p 8888:80 --name myapp $DOCKER_IMAGE'
                }
            }
        }

         stage('SonarQube Scan') {
            steps {
                script {
                    // Install dotnet-sonarscanner tool globally
                    sh 'dotnet tool install --global dotnet-sonarscanner'

                    // Begin SonarQube analysis
                    sh "dotnet sonarscanner begin /k:\"hello-world-mvc\" /d:sonar.host.url=\"http://localhost:9000\" /d:sonar.login=\"$SONAR_LOGIN\""

                    // Build the solution
                    sh 'dotnet build'

                    // End SonarQube analysis
                    sh "dotnet sonarscanner end /d:sonar.login=\"$SONAR_LOGIN\""
                }
            }
        }
    }
}


