pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'helloworldmvc'
        SONARQUBE_URL = 'http://localhost:9000'
        SONAR_PROJECT_KEY = 'hello-world-mvc' // Define the project key here
        SONAR_LOGIN='jenkins-sonar'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                script {
                    dir('HelloWorldMvc') {
                        sh 'dotnet build'
                    }
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    dir('HelloWorldMvc.Tests') {
                        sh 'dotnet test'
                    }
                }
            }
        }

        stage('Docker Build') {
            steps {
                script {
                    sh 'docker build -t $DOCKER_IMAGE .'
                }
            }
        }

        stage('Docker Run') {
            steps {
                script {
                    sh 'docker run -d -p 8888:80 --name myapp $DOCKER_IMAGE'
                }
            }
        }

         stage('SonarQube Scan') {
            steps {
                script {
                    // Install dotnet-sonarscanner tool
                    
                    // Execute SonarScanner begin
                    sh "dotnet sonarscanner begin /k:${env.SONAR_PROJECT_KEY} /d:sonar.host.url=${env.SONAR_HOST_URL} /d:sonar.login=${env.SONAR_LOGIN}"
                    // Build the project
                    sh 'dotnet build'
                    // Execute SonarScanner end
                    sh "dotnet sonarscanner end /d:sonar.login=${env.SONAR_LOGIN}"
                }
            }
        }
    }
}


